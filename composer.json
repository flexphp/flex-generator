{
    "name": "flexphp/generator",
    "description": "Flex PHP to Any Framework",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Freddie Gar",
            "email": "freddie.gar@outlook.com"
        }
    ],
    "require": {
        "php": ">=7.1.3",
        "ext-zip": "*",
        "box/spout": "^3.0",
        "flexphp/use-cases": "dev-develop",
        "jawira/case-converter": "^3.4",
        "symfony/http-foundation": "^4.3",
        "symfony/validator": "^4.3",
        "symfony/yaml": "^4.3",
        "twig/twig": "^2.12"
    },
    "require-dev": {
        "phpstan/phpstan": "~0.9",
        "phpunit/phpunit": "^7.0",
        "squizlabs/php_codesniffer": "~3.2",
        "symfony/var-dumper": "^4.3"
    },
    "autoload": {
        "psr-4": {
            "FlexPHP\\Generator\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "FlexPHP\\Generator\\Tests\\": "tests/"
        }
    },
    "scripts": {
    "phpcs": "phpcs --standard=PSR2 --ignore=src/dist/*,src/tmp/* src/",
    "phpfix": "phpcbf --standard=PSR2 --extensions=php src/",
    "phpstan": "phpstan analyse -l 7 src/",
    "phpunit": "phpunit --bootstrap vendor/autoload.php --testdox tests/",
    "test": [
        "@phpcs",
        "@phpstan",
        "@phpunit"
    ]
    },
    "config": {
        "sort-packages": true,
        "classmap-authoritative": true,
        "platform": {
            "php": "7.1.3"
        }
    },
    "prefer-stable": true,
    "minimum-stability": "dev"
}
