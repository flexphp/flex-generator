{% if action == 'index' %}
        return $this->render('{{ templates }}/index.html.twig', [
            '{{ items }}' => $response->{{ items }},
        ]);
{% elseif action in ['create', 'update', 'delete'] %}
        $this->addFlash($response->status, $response->message);

        return $this->redirectToRoute('{{ route }}.index');
{% elseif action == 'read' %}
        return $this->render('{{ templates }}/show.html.twig', [
            '{{ item }}' => $response->{{ item }},
        ]);
{% else %}
        return new Response($response);
{% endif %}