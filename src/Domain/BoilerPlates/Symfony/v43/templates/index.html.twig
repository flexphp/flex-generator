{{ '{%' }} extends 'form/layout.html.twig' {{ '%}' }}

{{ '{%' }} block title '{{ entity }}' {{ '%}' }}

{{ '{%' }} block main {{ '%}' }}
    <div class="card">
        <div class="card-header d-flex">
            <h3 class="card-header-title">{{ entity }}</h3>
            <div class="toolbar ml-auto">
                <a href="{{ '{{' }} path('{{ route }}.new') {{ '}}' }}" class="btn btn-success">
                    <i class="fa fa-plus" aria-hidden="true"></i> Create
                </a>
            </div>
        </div>
        <div class="card-body">
            <table class="table table-hover">
                <thead>
                    <tr>
{% for header in headers %}
                        <th scope="col">{{ header }}</th>
{% endfor %}
                        <th scope="col" class="text-center"><i class="fa fa-cogs" aria-hidden="true"></i> Actions</th>
                    </tr>
                </thead>
                <tbody>
                {{ '{%' }} for register in registers {{ '%}' }}
                    <tr>
{% for id, property in properties %}
                        <td>{{ '{{' }} register.{{ id }} {{ '}}' }}</td>
{% endfor %}
                        <td class="text-right">
                            <div class="item-actions">
                                <a href="{{ '{{' }} path('{{ route }}.read', {id: register.id}) {{ '}}' }}" class="btn btn-sm btn-default">
                                    <i class="fa fa-eye" aria-hidden="true"></i> {{ 'Show' }}
                                </a>

                                <a href="{{ '{{' }} path('{{ route }}.edit', {id: register.id}) {{ '}}' }}" class="btn btn-sm btn-primary">
                                    <i class="fa fa-edit" aria-hidden="true"></i> {{ 'Edit' }}
                                </a>
                            </div>
                        </td>
                    </tr>
                {{ '{%' }} else {{ '%}' }}
                    <tr>
                        <td colspan="{{ (properties|length) + 1 }}" align="center">Nothing here</td>
                    </tr>
                {{ '{%' }} endfor {{ '%}' }}
                </tbody>
            </table>
        </div>
    </div>
{{ '{%' }} endblock {{ '%}' }}
