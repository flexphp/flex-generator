{{ '{%' }} extends 'form/layout.html.twig' {{ '%}' }}

{{ '{%' }} block title {{ '%}' }}{{ '{%' }} trans {{ '%}' }}title.list{{ '{%' }} endtrans {{ '%}' }}{{ '{%' }} endblock {{ '%}' }}

{{ '{%' }} block main {{ '%}' }}
    <div class="card">
        <div class="card-header d-flex">
            <h3 class="card-header-title">
                {{ '{%' }} trans {{ '%}' }}title.list{{ '{%' }} endtrans {{ '%}' }}
            </h3>
            <div class="toolbar ml-auto">
                <a href="{{ '{{' }} path('{{ route }}.new') {{ '}}' }}" class="btn btn-success">
                    <i class="fa fa-plus" aria-hidden="true"></i> {{ '{%' }} trans from 'messages' {{ '%}' }}action.new{{ '{%' }} endtrans {{ '%}' }}
                </a>
            </div>
        </div>
        <div class="card-body">
            <table class="table table-hover">
                <thead>
                    <tr>
{% for id, property in properties %}
{% if not property.isBlame %}
                        <th scope="col">{{ '{%' }} trans {{ '%}' }}label.{{ id }}{{ '{%' }} endtrans {{ '%}' }}</th>
{% endif %}
{% endfor %}
                        <th scope="col" class="text-center" style="width: 105px;"><i class="fa fa-cogs" aria-hidden="true"></i></th>
                    </tr>
                </thead>
                <tbody>
                {{ '{%' }} for _{{ item }} in {{ items }} {{ '%}' }}
                    <tr>
{% for id, property in properties %}
{% if property.isBlame %}
{% elseif property.DataType starts with 'date' %}
                        <td>{{ '{{' }} _{{ item }}.{{ id }} ? _{{ item }}.{{ id }}|date('Y-m-d H:i:s') : '-' {{ '}}' }}</td>
{% elseif property.DataType starts with 'time' %}
                        <td>{{ '{{' }} _{{ item }}.{{ id }} ? _{{ item }}.{{ id }}|date('H:i:s') : '-' {{ '}}' }}</td>
{% elseif property.DataType starts with 'bool' %}
                        <td>{{ '{%' }} if _{{ item }}.{{ id }} {{ '%}' }}{{ '{%' }} trans from 'messages' {{ '%}' }}label.yes{{ '{%' }} endtrans {{ '%}' }}{{ '{%' }} else {{ '%}' }}{{ '{%' }} trans from 'messages' {{ '%}' }}label.no{{ '{%' }} endtrans {{ '%}' }}{{ '{%' }} endif {{ '%}' }}</td>
{% else %}
                        <td>{{ '{{' }} _{{ item }}.{{ id }} {{ '}}' }}</td>
{% endif %}
{% endfor %}
                        <td class="text-center">
                            <div class="btn-group">
                                <a href="{{ '{{' }} path('{{ route }}.read', {id: _{{ item }}.id}) {{ '}}' }}" class="btn btn-sm btn-outline-light" title="{{ '{%' }} trans from 'messages' {{ '%}' }}action.read{{ '{%' }} endtrans {{ '%}' }}">
                                    <i class="fa fa-eye text-dark" aria-hidden="true"></i>
                                </a>

                                <a href="{{ '{{' }} path('{{ route }}.edit', {id: _{{ item }}.id}) {{ '}}' }}" class="btn btn-sm btn-outline-light" title="{{ '{%' }} trans from 'messages' {{ '%}' }}action.edit{{ '{%' }} endtrans {{ '%}' }}">
                                    <i class="fa fa-edit text-primary" aria-hidden="true"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                {{ '{%' }} else {{ '%}' }}
                    <tr>
                        <td colspan="{{ (properties|filter(v => not v.isBlame)|length) + 1 }}" align="center">Nothing here</td>
                    </tr>
                {{ '{%' }} endfor {{ '%}' }}
                </tbody>
            </table>
        </div>
    </div>
{{ '{%' }} endblock {{ '%}' }}
