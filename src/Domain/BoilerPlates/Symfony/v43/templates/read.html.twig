{{ '{%' }} extends 'form/layout.html.twig' {{ '%}' }}

{{ '{%' }} block title '{{ entity }} Detail' {{ '%}' }}

{{ '{%' }} block main {{ '%}' }}
    <div class="card">
        <div class="card-header d-flex">
            <h3 class="card-header-title">{{ name }}</h3>
            <div class="toolbar ml-auto">
                <a href="{{ '{{' }} path('{{ route }}.index') {{ '}}' }}" class="btn btn-outline-secondary">
                    <i class="fa fa-list-alt" aria-hidden="true"></i> List
                </a>
            </div>
        </div>

        <div class="card-body">
{% for id, property in properties %}
{% if property.DataType starts with 'date' %}
            <div class="form-group"><label>{{ headers[loop.index - 1] }}</label><div class="form-control-plaintext">{{ '{{' }} register.{{ id }} ? register.{{ id }}|date('Y-m-d H:i:s') : '-' {{ '}}' }}</div></div>
{% elseif property.DataType starts with 'time' %}
            <div class="form-group"><label>{{ headers[loop.index - 1] }}</label><div class="form-control-plaintext">{{ '{{' }} register.{{ id }} ? register.{{ id }}|date('H:i:s') : '-' {{ '}}' }}</div></div>
{% elseif property.DataType starts with 'bool' %}
            <div class="form-group"><label>{{ headers[loop.index - 1] }}</label><div class="form-control-plaintext">{{ '{{' }} register.{{ id }} ? 'Yes' : 'No' {{ '}}' }}</div></div>
{% elseif property.DataType == 'text' %}
            <div class="form-group"><label>{{ headers[loop.index - 1] }}</label><div class="form-control-plaintext">{{ '{{' }} register.{{ id }}|nl2br {{ '}}' }}</div></div>
{% else %}
            <div class="form-group"><label>{{ headers[loop.index - 1] }}</label><div class="form-control-plaintext">{{ '{{' }} register.{{ id }} {{ '}}' }}</div></div>
{% endif %}
{% endfor %}
        </div>

        <div class="card-footer">
            <div class="row">
                <div class="col">
                    {{ '{{' }} include('{{ item }}/_delete_form.html.twig', {{ '{' }}{{ item }}: register{{ '}' }}, with_context = false) {{ '}}' }}
                </div>

                <div class="col text-right">
                    <a href="{{ '{{' }} path('{{ route }}.edit', {id: register.id}) {{ '}}' }}" class="btn btn-outline-primary">
                        <i class="fa fa-edit" aria-hidden="true"></i> Edit
                    </a>
                </div>
            </div>
        </div>
    </div>
{{ '{%' }} endblock {{ '%}' }}
