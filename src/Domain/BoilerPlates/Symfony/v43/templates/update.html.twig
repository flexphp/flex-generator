{{ '{%' }} extends 'form/layout.html.twig' {{ '%}' }}

{{ '{%' }} block title '{{ entity }} - Edit' {{ '%}' }}

{{ '{%' }} block main {{ '%}' }}
    <div class="card">
        <div class="card-header d-flex">
            <h3 class="card-header-title">Edit {{ name }}</h3>
            <div class="toolbar ml-auto">
                <a href="{{ '{{' }} path('{{ route }}.index') {{ '}}' }}" class="btn btn-outline-secondary">
                    <i class="fa fa-list-alt" aria-hidden="true"></i> List
                </a>
            </div>
        </div>

        <form id="edit-form" name="edit-form" method="post" action="{{ '{{' }} path('{{ route }}.update', {id: {{ item }}.id}) {{ '}}' }}">
            <input type="hidden" name="_method" value="put" />
            <div class="card-body">
{% for input in inputs %}
                {{ input|raw }}
{% endfor %}
            </div>
        </form>

        <div class="card-footer">
            <div class="row">
                <div class="col">
                    {{ '{{' }} include('{{ item }}/_delete_form.html.twig', {{ '{' }}{{ item }}: register{{ '}' }}, with_context = false) {{ '}}' }}
                </div>

                <div class="col text-right">
                    <button type="submit" form="edit-form" class="btn btn-primary">
                        <i class="fa fa-save" aria-hidden="true"></i> Update
                    </button>
                </div>
            </div>
        </div>
    </div>
{{ '{%' }} endblock {{ '%}' }}
