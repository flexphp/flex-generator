    public function remove(Delete{{ entity }}Request $request): {{ entity }}
    {
        $factory = new {{ entity }}Factory();
        $data = $this->gateway->get($factory->make($request));

        ${{ item }} = $factory->make($data);

        $this->gateway->pop(${{ item }});

        return ${{ item }};
    }
