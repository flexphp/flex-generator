    public function {{ property }}(array $constraints = [])
    {
        return $this->getValidator()->validate(__FUNCTION__, array_merge([
{% for rule, constraint in rules %}
{% if rule == 'required' %}
            new NotBlank(),
{% elseif rule == 'pattern' %}
            new Regex([
                'pattern' => '/^[a-z_]*$/',
            ]),
{% elseif rule == 'length' %}
            new Length([
                'min' => {{ constraint.min }},
                'max' => {{ constraint.max }},
            ]),
{% elseif rule == 'type' %}
{% if constraint == 'datetime' %}
            new DateTime(),
{% endif %}
{% endif %}
{% endfor %}
        ], $constraints));
    }
