{% set CreatedBy, CreatedById = properties|filter(v => v.isCb)|first, '' %}
{% set UpdatedBy, UpdatedById = properties|filter(v => v.isUb)|first, '' %}
<?php declare(strict_types=1);
{{ header|raw }}
namespace Domain\{{ entity }}\Request;

{% if action in ['Index'] %}
use Domain\Helper\DateTimeTrait;
{% endif %}
use FlexPHP\Messages\RequestInterface;

final class {{ action in ['Patch'] ? 'Update' : action }}{{ entity }}Request implements RequestInterface
{
{% if action in ['Index'] %}
    use DateTimeTrait;

{% endif %}
{% if action in ['Read', 'Delete'] %}
    public ${{ pkName }};

    public function __construct({{ pkTypeHint }} ${{ pkName }})
    {
        $this->{{ pkName }} = ${{ pkName }};
    }
{% elseif action in ['Login'] %}
    public ${{ login }};

    public function __construct(string ${{ login }})
    {
        $this->{{ login }} = ${{ login }};
    }
{% else %}
{% for id, property in properties %}
{% if property.isCb %}
{% set CreatedById = id %}
{% endif %}
{% if property.isUb %}
{% set UpdatedById = id %}
{% endif %}
{% if (action in ['Update', 'Patch'] and (property.isPk or property.isUb)) or (action in ['Create'] and property.isCb) or action in ['Index'] or (not property.isAi and not property.isBlame) %}
{% if action in ['Index'] and property.isCa %}
    public ${{ id }} = [];
{% else %}
    public ${{ id }};
{% endif %}

{% endif %}
{% endfor %}
{% if action in ['Index'] %}
    public $_page;

    public $_limit;

    public $_offset;

{% endif %}
{% if action in ['Create'] and CreatedBy %}
    public function __construct(array $data, {{ CreatedBy.typeHint }} ${{ CreatedById }})
{% elseif action in ['Update'] and UpdatedBy %}
    public function __construct({{ pkTypeHint }} ${{ pkName }}, array $data, {{ UpdatedBy.typeHint }} ${{ UpdatedById }})
{% elseif action in ['Update'] %}
    public function __construct({{ pkTypeHint }} ${{ pkName }}, array $data)
{% elseif action in ['Patch'] and UpdatedBy %}
    public $_patch;

    public function __construct({{ pkTypeHint }} ${{ pkName }}, array $data, {{ UpdatedBy.typeHint }} ${{ UpdatedById }}, bool $_patch = false)
{% elseif action in ['Patch'] %}
    public $_patch;

    public function __construct({{ pkTypeHint }} ${{ pkName }}, array $data, bool $_patch = false)
{% elseif action in ['Index'] %}
    public function __construct(array $data, int $_page, int $_limit = 50, ?string $timezone = null)
{% else %}
    public function __construct(array $data)
{% endif %}
    {
{% for id, property in properties %}
{% if action in ['Update', 'Patch'] and property.isPk %}
        $this->{{ id }} = ${{ pkName }};
{% elseif action in ['Create', 'Update', 'Patch'] and property.trim %}
        $this->{{ id }} = isset($data['{{ id }}']) ? \trim($data['{{ id }}']) : null;
{% elseif (action in ['Create'] and property.isCb) or (action in ['Update', 'Patch'] and property.isUb) %}
        $this->{{ id }} = ${{ id }};
{% elseif not (action in ['Create'] and property.isAi) and not property.isBlame %}
        $this->{{ id }} = $data['{{ id }}'] ?? null;
{% elseif action in ['Index'] %}
{% if property.isCa %}
        $this->{{ id }}[] = $data['{{ id }}_START'] ?? null;
        $this->{{ id }}[] = $data['{{ id }}_END'] ?? null;
{% else %}
        $this->{{ id }} = $data['{{ id }}'] ?? null;
{% endif %}
{% endif %}
{% endfor %}
{% if action in ['Patch'] %}
        $this->_patch = $_patch;
{% elseif action in ['Index'] %}
        $this->_page = $_page;
        $this->_limit = $_limit;
        $this->_offset = $this->getOffset($this->getTimezone($timezone));
{% endif %}
    }
{% endif %}
}
