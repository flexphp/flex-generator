jQuery(document).ready(function ($) {
    'use strict';

{% for fkRel in fkRels %}
    const {{ fkRel.pkName }}Url = $('#{{ item }}_form_{{ fkRel.pkName }}').data('autocomplete-url');
{% endfor %}
{% for fkRel in fkRels %}

    $('#{{ item }}_form_{{ fkRel.pkName }}').select2({
        theme: 'bootstrap4',
        minimumInputLength: 3,
        allowClear: true,
        ajax: {
            url: {{ fkRel.pkName }}Url,
            method: 'POST',
            dataType: 'json',
            delay: 300,
            cache: true,
            headers: {
                'X-XSRF-Token': getCookie('XSRF-Token')
            },
            data: function (params) {
                return {
                    term: params.term,
                    page: params.page
                };
            }
        },
    });
{% endfor %}
});
